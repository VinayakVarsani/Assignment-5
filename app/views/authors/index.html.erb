<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between align-items-center me-5">
  <h2>Authors</h2>
  <%= link_to "New author", new_author_path, class: "btn btn-outline-primary ms-5" %>
</div>
<hr>
<div class="container-fluid ">
<div class="d-flex row row-cols-1 row-cols-md-3 g-4 mx-5">
<% @authors.each do |author|%>
<div class="card mx-2" style="max-width: 450px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag author.profile_picture, size: "150x150" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= author.name%></h5>
        <p class="card-text"><%= author.address%></p>
         <% author.books.each do |book| %>
              <%= link_to book.name, book_path(book), class: "btn btn-outline-primary"%>
          <% end %>
          </div>
      <div class="card-footer">
        <%= link_to "Edit", edit_author_path(author), class: "btn btn-outline-warning" %>
        <%= link_to "Delete", author_path(author), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
      </div>
      
    </div>
  </div>
</div>
<% end %>
</div>
</div>